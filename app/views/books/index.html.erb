
<h1>Books</h1>
<!--trタグ＝行の横並びで配置するためのもの-->
<!--thタグ＝見出しの要素を表すもの-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <!--colspan=横方向に結合-->
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <!--tdタグ＝表のデータを表す-->
     <tr>
      <td><!--タイトル-->
        <%= book.title %>
      </td>
      <td><!--感想-->
        <%= book.body %>
      </td>
      <td>
        <%= link_to "Show" ,book_path(book) %>
      </td>
      <td>
        <%= link_to "Edit" ,edit_book_path(book) %>
      </td>
      <td>
        <%= link_to "Destroy" ,book_path(book), method: :delete%>
      </td>
     </tr>
    <% end %>
  </tbody>
</table>



<h2>New Book</h2>
  <% if @book.errors.any? %>
  <div class="error_explanation">
   <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
　</div>
  <% end %>

<%= form_with model:@book, url:'/books', local:true do |f| %>

 <div>
  <h4>title</h4>
    <%= f.text_field :title %>
 </div>

 <div>
  <h4>body</h4>
   <%= f.text_field :body %>
 </div>

  <%= f.submit"Create Book" %>

<% end %>
